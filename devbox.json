{
  "packages": [
    "go@1.24.1",
    "postgresql@latest",
    "nodejs@20",
    "git@latest",
    "air@latest"
  ],
  "env": {
    "DEVBOX_COREPACK_ENABLED": "true"
  },
  "shell": {
    "init_hook": "go mod tidy",
    "scripts": {
      "server": "air",
      "db:init": "initdb -D .devbox/pg/data -U postgres",
      "db:start": "pg_ctl -D .devbox/pg/data -l .devbox/pg/logfile start",
      "db:stop": "pg_ctl -D .devbox/pg/data stop"
    }
  }
}
